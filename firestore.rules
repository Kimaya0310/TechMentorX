
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    function isRole(role) {
        return isSignedIn() && getUserRole(request.auth.uid) == role;
    }

    // Users can read and update their own profile, anyone can read public profiles for leaderboards
    match /users/{userId} {
      allow read: if isSignedIn();
      allow update: if isOwner(userId);
      // Anyone can create a user profile during signup
      allow create: if isSignedIn();
    }
    
    // Schemes are public to all signed-in users
    match /schemes/{schemeId} {
        allow read: if isSignedIn();
        // Only admins can write schemes
        allow write: if isRole('admin');
    }

    // Rules for applications
    match /applications/{applicationId} {
        // Beneficiary can create an application for themselves
        allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
        // Beneficiary can read/update their own applications.
        // Assisting NGO/Volunteer can also read/update.
        allow read, update: if isSignedIn() && (
            resource.data.userId == request.auth.uid ||
            resource.data.assistedBy == request.auth.uid ||
            isRole('ngo')
        );
    }
    
    // Rules for donations
    match /donations/{donationId} {
        // Any signed-in user can create a donation
        allow create: if isSignedIn() && request.resource.data.donorId == request.auth.uid;
        // Let any signed-in user query the collection.
        allow list: if isSignedIn();
        // Only allow getting a doc if you're the donor, assigned NGO, an admin, or an NGO viewing a requested donation.
        allow get: if isSignedIn() && (
            resource.data.donorId == request.auth.uid ||
            resource.data.ngoId == request.auth.uid ||
            isRole('admin') ||
            (isRole('ngo') && resource.data.status == 'requested')
        );
        // Only the donor or the assigned NGO can update the donation status
        allow update: if isSignedIn() && (
            resource.data.donorId == request.auth.uid ||
            resource.data.ngoId == request.auth.uid ||
            isRole('admin')
        );
    }

    // Rules for assistance requests
    match /requests/{requestId} {
        // A beneficiary can create a request for themselves
        allow create: if isRole('beneficiary') && request.resource.data.userId == request.auth.uid;
        // The beneficiary can read/update their own request.
        // An assigned volunteer, NGO, or an admin can read/update it.
        allow read, update: if isSignedIn() && (
            resource.data.userId == request.auth.uid ||
            resource.data.assignedVolunteerId == request.auth.uid ||
            isRole('ngo') ||
            isRole('admin')
        );
        // Beneficiary can delete their own request.
        allow delete: if isOwner(resource.data.userId);
    }

    // Rules for tasks
    match /tasks/{taskId} {
        // NGOs and Admins can create tasks
        allow create: if isRole('ngo') || isRole('admin');
        // The assigned volunteer can read/update their task.
        // The creating NGO and admins can also read/update.
        allow read, update: if isSignedIn() && (
            resource.data.volunteerId == request.auth.uid ||
            (isRole('ngo') && resource.data.ngoId == request.auth.uid) ||
            isRole('admin')
        );
    }

    // Rules for CSR projects
    match /csr-projects/{projectId} {
        // Only a user with the 'company' role can create a project for their company
        allow create: if isRole('company') && request.resource.data.companyId == request.auth.uid;
        // All signed-in users can view CSR projects for transparency
        allow read: if isSignedIn();
        // Only the owning company or an admin can update the project
        allow update: if isOwner(resource.data.companyId) || isRole('admin');
    }
  }
}
